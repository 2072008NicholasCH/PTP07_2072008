<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ptp07_2072008.HelloController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TextArea fx:id="txtArea" prefHeight="471.0" prefWidth="0.0" />
    <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
        <children>
            <Button fx:id="btnOpen" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#open" text="Open" />
            <Button fx:id="btnSaveAs" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#saveAs" text="Save As" />
            <Button fx:id="btnSave" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#save" text="Save" />
        </children>
    </HBox>
</VBox>
